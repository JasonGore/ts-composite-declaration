{
  "compilerOptions": {
    // composite is the only difference against emit-standard/tsconfig.json
    "composite": true,
    "allowJs": true,
    "checkJs": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "src",
    "strict": false
  },
  "include": ["src"]
}
